{
  "name": "melinda-batch-update-cli",
  "version": "1.0.0",
  "description": "A command-line client for batch updating records in Melinda.",
  "homepage": "https://github.com/NatLibFi/melinda-batch-update-cli#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NatLibFi/melinda-batch-update-cli.git"
  },
  "keywords": [],
  "author": {
    "name": "The National Library of Finland"
  },
  "license": "AGPL-3.0+",
  "bugs": {
    "url": "https://github.com/NatLibFi/melinda-batch-update-cli/issues"
  },
  "main": "./dist/index.js",
  "engines": {
    "node": ">=7"
  },
  "scripts": {
    "prepublishOnly": "npm run build:transpile",
    "check-deps": "npm-check;exit 0",
    "lint": "eslint --fix src",
    "test:unit": "cross-env NODE_ENV=test nyc -x src/**/*.spec.js mocha --require babel-core/register src/**/*.spec.js",
    "test": "npm run lint && npm run test:unit && npm run coverage",
    "clean": "rimraf build dist",
    "coverage": "nyc check-coverage --per-file",
    "build:transpile": "babel src --source-maps --out-dir=dist",
    "build": "npm run clean && npm run build:transpile && npm run check-deps",
    "watch": "cross-env DEBUG=1 NODE_ENV=test chokidar src -c 'npm test'",
    "publish-to-npm": "npm install && npm test && npm run coverage && npm publish --access=public"
  },
  "dependencies": {
    "@natlibfi/marc-record": "^4.0.0",
    "@natlibfi/marc-record-serializers": "^2.0.0",
    "@natlibfi/marc-record-validate": "^4.0.0",
    "@natlibfi/marc-record-validators-melinda": "^5.0.0",
    "@natlibfi/melinda-api-client": "^1.1.6",
    "lodash": "^4.17.11",
    "moment": "^2.22.2",
    "mongodb": "^3.1.8",
    "prompt-promise": "^1.0.3",
    "winston": "^3.1.0",
    "yargs": "^12.0.2"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^10.0.1",
    "babel-plugin-istanbul": "^5.1.0",
    "babel-preset-env": "^1.7.0",
    "babel-register": "^6.26.0",
    "build-cli": "^0.3.5",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "chai-xml": "^0.3.2",
    "chokidar-cli": "^1.2.1",
    "cross-env": "^5.2.0",
    "eslint": "^5.7.0",
    "eslint-config-xo": "^0.25.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-mocha": "^5.2.0",
    "istanbul": "^0.4.5",
    "mocha": "^5.2.0",
    "nock": "^10.0.1",
    "npm-check": "^5.9.0",
    "nyc": "^13.1.0",
    "rimraf": "^2.6.2"
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "plugins": [
      "import"
    ],
    "extends": [
      "xo",
      "plugin:import/errors"
    ],
    "rules": {
      "valid-jsdoc": "off",
      "prefer-arrow-callback": [
        "error"
      ]
    },
    "env": {
      "mocha": true
    }
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "node": "7"
          }
        }
      ]
    ],
    "env": {
      "test": {
        "plugins": [
          "istanbul"
        ]
      }
    }
  },
  "nyc": {
    "reporter": [
      "lcov",
      "html"
    ],
    "require": [
      "babel-register"
    ],
    "sourceMap": false,
    "instrument": false,
    "lines": 80,
    "statements": 80,
    "functions": 80,
    "branches": 80
  }
}
